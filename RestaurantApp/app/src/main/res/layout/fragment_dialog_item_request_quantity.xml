<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemItemQuantityDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Change Quantity"
        android:textColor="@color/colorDoneOrderBackgroundLineBreaker"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnItemItemQuantityDialogSub"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="-"
                android:textColor="@color/colorDoneOrderBackgroundLineBreaker"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/itemItemQuantityDialogQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@color/colorDoneOrderBackgroundLineBreaker" />

            <Button
                android:id="@+id/btnItemItemQuantityDialogAdd"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="+"
                android:textColor="@color/colorDoneOrderBackgroundLineBreaker"
                android:textSize="24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:gravity="right">

            <Button
                android:id="@+id/btnItemItemQuantityDialogChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_bold"
                android:text="Change"
                android:textColor="@color/colorDoneOrderBackgroundLineBreaker" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
